---
interface Props {
	value?: string[];
}

const { value = [] } = Astro.props;
const tagsString = value.join(", ");
---

<div class="flex flex-col gap-2">
	<input
		type="text"
		id="tags"
		name="tags"
		value={tagsString}
		placeholder="Tags (comma separated, e.g. tech, life, memo)"
		class="input input-bordered w-full"
	/>
</div>
