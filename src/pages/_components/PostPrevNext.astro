---
import { Icon } from "astro-icon/components";
import { BORDER_COLORS, type VitaColor } from "@/pages/_lib/constants";

export interface Props {
	color: VitaColor;
	url: string;
	title: string;
	isPrev?: boolean;
	isNext?: boolean;
}

const { color, url, title, isPrev, isNext } = Astro.props;
---

<a
	href={url}
	class:list={[
		"flex w-full items-center gap-2 rounded-2xl border-2 p-4 duration-200",
		BORDER_COLORS[color],
	]}
	data-astro-reload
>
	{isPrev ? <Icon name="tabler:arrow-left" /> : null}

	<div class="flex-1">
		<div class="text-sm">{title}</div>
	</div>

	{isNext ? <Icon name="tabler:arrow-right" /> : null}
</a>
