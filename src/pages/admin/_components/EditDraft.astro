---
interface Props {
	value?: boolean;
}

const { value = false } = Astro.props;
---

<div class="flex items-center gap-4">
	<input
		type="checkbox"
		id="draft"
		name="draft"
		checked={value}
		class="toggle checked:bg-secondary"
	/>
	<span class="text-base-content text-sm">Draft</span>
</div>
