---
import { type CollectionEntry, getCollection } from "astro:content";
import PostLayout from "../../features/posts/_layouts/PostLayout.astro";

export interface Props {
	post: CollectionEntry<"blog">;
}

export async function getStaticPaths() {
	const posts = await getCollection("blog");
	const postResult = posts.map((post) => ({
		params: { slug: `/${post.id}` },
		props: { post },
	}));

	return postResult;
}

const { post } = Astro.props;

const allBlogPosts = (await getCollection("blog"))
	.filter((p) => !p.data.draft)
	.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const postIndex = allBlogPosts.findIndex((p) => p.id === post.id);

const prevPost = postIndex > 0 ? allBlogPosts[postIndex - 1] : null;
const nextPost =
	postIndex < allBlogPosts.length - 1 ? allBlogPosts[postIndex + 1] : null;
---

<PostLayout post={post} prevPost={prevPost} nextPost={nextPost} />
