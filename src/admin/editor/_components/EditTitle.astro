---
interface Props {
	value?: string;
}

const { value = "" } = Astro.props;
---

<div class="flex flex-col gap-2">
	<label for="title" class="text-gray-7 text-sm font-bold">Title</label>
	<input
		type="text"
		id="title"
		name="title"
		value={value}
		class="border-gray-2 bg-gray-0 text-gray-7 focus:ring-accent-500 flex-1 rounded border p-2 text-sm outline-none focus:ring-2"
		required
	/>
</div>
