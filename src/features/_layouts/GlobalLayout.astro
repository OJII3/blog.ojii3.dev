---
import "../_styles/global.css";

import { GOOGLE_ANALYTICS_ID } from "astro:env/client";
import { ClientRouter } from "astro:transitions";
import GoogleAnalytics from "../_components/GoogleAnalytics.astro";

type Props = {
	title?: string;
	ogImage?: string;
};

const { title, ogImage } = Astro.props;
---

<!doctype html>
<html lang="ja" class="min-h-dvh">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    {GOOGLE_ANALYTICS_ID && <GoogleAnalytics id={GOOGLE_ANALYTICS_ID} />}
    <title>{title}</title>

    <meta property="og:title" content={title} />
    <meta property="og:url" content={Astro.site?.toString()} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="website" />
    <meta property="twitter:card" content="summary_large_image" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <script is:inline>
      const setupTheme = () => {
        const localStorageTheme = localStorage?.getItem("theme") ?? "";

        if (["dark", "light"].includes(localStorageTheme)) {
          return localStorageTheme;
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      };

      const applyTheme = () => {
        const theme = setupTheme();
        window.localStorage.setItem("theme", theme);
        if (theme === "light") {
          document.documentElement.classList.remove("dark");
        } else {
          document.documentElement.classList.add("dark");
        }
      };

      // 初回ロード時に即座に適用
      applyTheme();

      // View Transitions でのページ遷移時にも適用
      document.addEventListener("astro:after-swap", applyTheme);
    </script>

    <ClientRouter />
  </head>
  <body class="bg-gray-0 text-gray-7 min-h-dvh">
    <slot />
  </body>
</html>
