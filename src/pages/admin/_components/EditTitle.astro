---
interface Props {
	value?: string;
}

const { value = "" } = Astro.props;
---

<div class="flex flex-col gap-2">
	<label for="title" class="text-base-content text-sm font-bold">Title</label>
	<input
		type="text"
		id="title"
		name="title"
		value={value}
		class="input input-bordered w-full"
		required
	/>
</div>
