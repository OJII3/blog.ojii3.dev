---
interface Props {
	value?: boolean;
}

const { value = false } = Astro.props;
---

<div class="flex items-center gap-2">
	<input
		type="checkbox"
		id="draft"
		name="draft"
		checked={value}
		class="border-gray-2 bg-gray-0 text-accent-600 focus:ring-accent-500 h-4 w-4 rounded border focus:ring-2"
	/>
	<label for="draft" class="text-gray-7 text-sm font-bold">Draft</label>
</div>
